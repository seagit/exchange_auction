body
	padding 50px
	font 14px "Lucida Grande", Helvetica, Arial, sans-serif
a
	color  #00B7FF

/*****************************
 * User page
 * **************************/
#user-page
	width 800px
	margin 0 auto

#user-page .user-ava
	float left
	width 200px
	margin-right 24px

#user-page .user-ava img
	width 200px
	height 200px

#user-page .user-info
	float right
	width 550px

#user-page section.lot-admin 
	width 754px
	height 90px
	padding 18px
	margin-bottom 18px
	border 1px solid #ccc
	background-color #ddd

#user-page section.lot-admin img.lot-image
	float left
	width 90px
	height 90px
	margin-right 24px

#user-page section.lot-admin h3.lot-title
	float left
	width 640px
	height 35px 
	color #666

#user-page section.lot-admin .lot-actions 
	float left
	width 640px

#user-page section.lot-admin .lot-actions a
	display inline-block
	margin-right 18px

.clr 
	clear both

