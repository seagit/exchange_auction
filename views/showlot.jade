extends layout

block content
	#lot-page
		section.top-left
			//- TODO: lot images gallery widget
			main_image = '/stylesheets/i/iphone.jpg'

			img.main-image(src='#{main_image}', alt='main lot image')

			user = {name:'test-user', location:'Lviv', email:'testmail@mail.com', phone:'(086) 234 56 43', _id:'12342312132342342'}

			section.user-info
				h5.user-name= user.name
				p.location= user.location
				p.mail= user.email
				p.phone= user.phone
				p= user._id
		section.top-right
			h1.lot-title= lot.name
			h3.value= lot.price
			h5.period= lot.period_formatted
			section.lot-desc
				h5.desc-title Description
				p.desc= lot.description
			section.lot-wishes
				h5.wishes-title Wish exchange
				p.wishes lot wishes will be here
		div.clr
		section.bottom-left
			section.ad-text
				p Advertisment
			section.ad-banner
				img(src='/stylesheets/i/motorola.jpg', alt='banner')
		section.bottom-right
			h3.disc-title Discussion
			section.discussion
				- var i = 0
				if lot.offers
					- for topic in lot.offers
						//- TODO: should be case by type of topic : guest offer, user offer, response
						article(class = '#{i%2 === 0 ? 'offer' : 'response'}')
							p= topic.description
						- i++
				else
					p No discussion right now
