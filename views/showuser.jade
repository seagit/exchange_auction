!!! 5
html
	head
		title= user.name
		link(rel='stylesheet', href='/stylesheets/style.css')
	body
		#user-page
			include includes/menu
			div.user-ava
				if user.photo != '' 
					img(src=#{user.photo}, alt='avatar')
				else
					img(src='/stylesheets/i/dummyava.png', alt='dummy avatar')
			div.user-info
				h1= user.name
				div.user-meta
					p= user._id
					p= user.email
					p= user.phone
					p= user.location
					p= user.photo
			div.clr
	
			//- object lots array imitation
			lots = [{id:'1', main_image:'/stylesheets/i/iphone.jpg', name:'iphone'},{id:'2', main_image:'/stylesheets/i/samsung.jpg', name:'samsung'},{id:'3', main_image:'/stylesheets/i/motorola.jpg', name:'motorola'}]
			//- end of object
	
			- for lot in lots
				section.lot-admin
					img.lot-image(src='#{lot.main_image}', alt='lot image')
					a(href='/items/' + lot.id)	
						h3.lot-title= lot.name
					div.lot-actions
						a(href='/items/start/' + lot.id) start exchange
						a(href='/items/stop/' + lot.id) stop exchange
						a(href='/items/done/' + lot.id) exchanged
						a(href='/items/add-photo/' + lot.id) add photo 
						a(href='/items/edit/' + lot.id) edit
						a(href='/items/del/' + lot.id) delete
		include includes/footer
